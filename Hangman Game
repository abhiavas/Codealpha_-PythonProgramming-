import random

# List of predefined words
words = ["python", "coding", "game", "hangman", "computer"]

# Select a random word
word = random.choice(words)
word_letters = set(word)  # Set of letters in the word
guessed_letters = set()   # Letters guessed by the player
incorrect_guesses = 0     # Count of incorrect guesses
max_incorrect = 6         # Maximum allowed incorrect guesses

# Display the current state of the word
def display_word():
    return " ".join(letter if letter in guessed_letters else "_" for letter in word)

# Game loop
print("Welcome to Hangman!")
print(f"The word has {len(word)} letters: {display_word()}")

while incorrect_guesses < max_incorrect and word_letters != guessed_letters:
    # Get player's guess
    guess = input("Guess a letter: ").lower()
    
    # Validate input
    if len(guess) != 1 or not guess.isalpha():
        print("Please enter a single letter.")
        continue
    
    if guess in guessed_letters:
        print("You already guessed that letter.")
        continue
    
    # Process the guess
    guessed_letters.add(guess)
    if guess in word_letters:
        print(f"Good guess! {display_word()}")
    else:
        incorrect_guesses += 1
        print(f"Wrong guess! {max_incorrect - incorrect_guesses} tries left. {display_word()}")

# Game outcome
if word_letters == guessed_letters:
    print(f"Congratulations! You guessed the word: {word}")
else:
    print(f"Game Over! The word was: {word}")
